<%- include('./layout/header.ejs') %>

<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card shadow">
                <div class="card-header bg-success">
                    <h3 class="text-light">Edit Product</h3>
                </div>
                <div class="card-body p-4">
                    <form action="/update/<%= product._id %>" method="post" id="add-form" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="name">Name</label>
                            <input type="text" value="<%= product.name %>" name="name" class="form-control form-control-lg" placeholder="Enter Name" required />
                        </div>
                        <div class="mb-3">
                            <label for="quantity">Quantity</label>
                            <input type="text" value="<%= product.quantity %>" name="quantity" class="form-control form-control-lg" placeholder="Item quantity" required />
                        </div>
                        <div class="mb-3">
                            <label for="price">Price</label>
                            <input type="text" value="<%= product.price %>" name="price" class="form-control form-control-lg" placeholder="Enter item price" required />
                        </div>
                        <div class="mb-3">
                            <label for="image">Image</label>
                            <input type="file" name="image" class="form-control form-control-lg"/>
                            <img src="/<%= product.image %>" width="100" class="img-thumbnail mt-1">
                        </div>
                        <input type="hidden" name="old_image" value="<%= product.image %>">
                        <div class="mb-3 d-grid">
                            <input type="submit" name="submit" value="Update Product" class="btn btn-success btn-lg">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('./layout/footer.ejs') %>