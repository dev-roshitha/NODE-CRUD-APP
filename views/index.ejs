<%- include('./layout/header.ejs') %>

<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            <div class="table-responsive">
                <% if (products != ""){%>
                    <table class="table table-striped text-center">
                        <thead>
                            <tr class="table-dark">
                                <th>ID</th>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Quantity</th>
                                <th>Price</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% products.map((row, index) => { %>
                                <tr class="align-middle">
                                    <td><%= index %></td>
                                    <td><img src="<%= row.image %>" width="50" height="50" class="img-thumbnail"></td>
                                    <td><%= row.name %></td>
                                    <td><%= row.quantity %></td>
                                    <td><%= row.price %></td>
                                    <td>
                                        <a href="/edit/<%= row._id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                        <a href="/delete/<%= row._id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                <% }else{ %>
                        <h1 class="text-center text-secondary mt-5">No user found in the database</h1>
                    <% } %>
            </div>
        </div>
    </div>
</div>

<%- include('./layout/footer.ejs') %>